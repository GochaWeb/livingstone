@model livingstone.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Content/Site.css" rel="stylesheet" />

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<div class="form-wrapper">
    <form action="@Url.Action("Login","Account")" class="form-group" method="post" enctype="multipart/form-data">
        <h2 style="text-align:center">Login</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "text", @placeholder = "ელ.ფოსტა" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @placeholder = "პაროლი" })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


        <div class="buttonWrapper">
            <button class="btn btn-success" type="submit">შესვლა</button>
            <a href="@Url.Action("Registration","Account")">Don't have an Account?</a>
        </div>
        <p style="color: red;">@TempData["Error"]</p>
        <p style="color: green;">@TempData["Success"]</p>
    </form>
</div>

