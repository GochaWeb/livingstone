                            $('.Phototest').attr('src', src);
                            //body = '<img src="' + src + '"/ class="Phototest">';
                            //$('#UploadedImage').html(body);


                        }


                    }
                });




            });


        });


    </script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('.Phototest').Jcrop({

