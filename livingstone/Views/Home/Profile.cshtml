    <script>

        $(document).ready(function () {

            $('#searchInput').keyup(function () {

                let query = $(this).val();

                $.ajax({

                    url: '/Home/GetUser',
                    method: 'post',
                    data: { 'query': query },

                    success: function (response) {
                        var body = "";

                        if (response == false) {
                            body = "";
                        }

                        $.each(response, function (key, value) {

                            body += '<a href="/Home/Index/'+value.Name+'">' + value.Name + ' '+value.Surname + '</a> <br />'

                            console.log(value.Name + ' ' + value.Surname);


                        });
                        $('#query').html(body);
                    }
                });
            });

        });


    </script>

    <script>

